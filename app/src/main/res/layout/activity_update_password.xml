<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Activity.UpdatePasswordActivity">


   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:layout_gravity="center"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">
           <ImageView
               android:id="@+id/appLogo"
               android:layout_width="350dp"
               android:layout_height="300dp"
               android:src="@drawable/logo"
               android:layout_gravity="center"
               android:tint="@color/colorPrimary"

               android:padding="20dp"
               android:layout_centerHorizontal="true"


               />

           <RelativeLayout
               android:id="@+id/rel_gen"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="-30dp"
               android:layout_below="@id/appLogo"


               >

               <RelativeLayout
                   android:id="@+id/relativeLayout2"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="30dp"


                   android:padding="0dp"
                   android:layout_marginLeft="30dp"
                   android:layout_marginRight="30dp"


                   >
                   <ImageView
                       android:id="@+id/imageViewUserIcon"
                       android:layout_width="40dp"

                       android:layout_height="40dp"
                       android:src="@drawable/ic_assignment_ind_black_24dp"
                       android:visibility="gone"
                       android:padding="5dp"
                       android:tint="@android:color/white"/>

                   <EditText
                       android:id="@+id/et_pass"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_alignBottom="@id/imageViewUserIcon"
                       android:padding="10dp"
                       android:layout_marginTop="0dp"
                       android:layout_toRightOf="@id/imageViewUserIcon"
                       android:background="@drawable/shape2"

                       android:drawableLeft="@drawable/ic_lock_black_24dp"
                       android:drawableTint="@color/colorPrimaryDark"
                       android:drawablePadding="10dp"
                       android:hint="Password"
                       android:inputType="textPassword"
                       android:textSize="16dp"
                       android:textColor="@color/colorPrimaryDark"
                       android:textColorHint="@color/colorPrimaryDark"/>
               </RelativeLayout>

               <RelativeLayout
                   android:id="@+id/relativeLayout3"
                   android:layout_below="@id/relativeLayout2"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:padding="0dp"
                   android:layout_marginTop="10dp"
                   android:layout_marginLeft="30dp"
                   android:layout_marginRight="30dp"


                   >
                   <ImageView
                       android:id="@+id/imageViewUserIcon2"
                       android:layout_width="40dp"

                       android:layout_height="40dp"
                       android:src="@drawable/ic_assignment_ind_black_24dp"
                       android:visibility="gone"
                       android:padding="5dp"
                       android:tint="@android:color/white"/>

                   <EditText
                       android:id="@+id/et_con_pass"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_alignBottom="@id/imageViewUserIcon2"
                       android:padding="10dp"
                       android:layout_marginTop="0dp"
                       android:layout_toRightOf="@id/imageViewUserIcon2"
                       android:background="@drawable/shape2"

                       android:inputType="textPassword"
                       android:drawableLeft="@drawable/ic_lock_black_24dp"
                       android:drawableTint="@color/colorPrimaryDark"
                       android:drawablePadding="10dp"
                       android:hint="Confirm Password"
                       android:textSize="16dp"
                       android:textColor="@color/colorPrimaryDark"
                       android:textColorHint="@color/colorPrimaryDark"/>
               </RelativeLayout>




               <Button
                   android:id="@+id/btn_update"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Update Password"
                   android:textAllCaps="false"

                   android:background="@drawable/gradient_button"
                   android:layout_marginLeft="30dp"
                   android:layout_marginRight="30dp"
                   android:textColor="@color/white"
                   android:layout_marginTop="10dp"
                   android:textSize="16dp"
                   android:layout_below="@id/relativeLayout3"/>

           </RelativeLayout>



       </LinearLayout>
   </ScrollView>
    <ImageView
        android:id="@+id/iv_back"
        android:layout_margin="10dp"
        android:src="@drawable/ic_keyboard_backspace_black_24dp"
        android:layout_width="wrap_content"
        android:tint="@color/black"
        android:layout_height="wrap_content"/>
</RelativeLayout>
