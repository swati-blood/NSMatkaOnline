<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="in.matka.rose.Fragments.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_alignParentStart="true"
            android:layout_marginStart="-2dp"
            android:layout_marginTop="@dimen/_20sdp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                app:cardBackgroundColor="#A38DFD"
                app:cardCornerRadius="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:orientation="vertical"

                    android:padding="10dp">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_25sdp"
                        android:gravity="center"
                        android:text="Profile "
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp"
                        android:textStyle="bold"

                        />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="Mobile "
                        android:textColor="@color/white"


                        />

                    <EditText
                        android:id="@+id/etMobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/shape2"
                        android:textColorHint="@color/white"
                        android:textColor="@color/white"

                        android:hint="mobile number"
                        android:inputType="textEmailAddress"
                        android:padding="10dp"

                        />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="10dp"
                        android:text="Email "
                        android:textColor="@color/white"


                        />

                    <EditText
                        android:id="@+id/et_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_margin="5dp"
                        android:background="@drawable/shape2"
                        android:textColorHint="@color/white"
                        android:textColor="@color/white"

                        android:hint="email "
                        android:textSize="16dp"
                        android:inputType="textEmailAddress"
                        android:padding="10dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="10dp"
                        android:text="Date of Birth"
                        android:textColor="@color/white"


                        />

                    <EditText
                        android:id="@+id/et_dob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_margin="5dp"
                        android:background="@drawable/shape2"
                        android:textColorHint="@color/white"
                        android:textColor="@color/white"

                        android:hint="Date of Birth"
                        android:inputType="textEmailAddress"
                        android:padding="10dp"
                        android:textSize="16dp"


                        />

                    <Button
                        android:id="@+id/btn_update"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_10sdp"
                        android:background="@drawable/gradient_button"
                        android:text="Update"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:textColor="@color/white" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                app:cardBackgroundColor="#A38DFD"

                app:cardCornerRadius="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">


                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_25sdp"
                        android:gravity="center"
                        android:text="Address"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp"
                        android:textStyle="bold"

                        />


                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="Address"
                        android:textColor="@color/white"


                        />

                    <EditText
                        android:id="@+id/etAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/shape2"
                        android:textColorHint="@color/white"
                        android:textColor="@color/white"

                        android:hint="Address"
                        android:inputType="textMultiLine"
                        android:padding="10dp"
                        android:textSize="16dp"


                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="10dp"
                        android:text="City"
                        android:textColor="@color/white"


                        />

                    <EditText
                        android:id="@+id/etCity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/shape2"
                        android:textColorHint="@color/white"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        android:hint="City"
                        android:inputType="text"
                        android:padding="10dp"


                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="10dp"
                        android:text="Pincode"
                        android:textColor="@color/white"


                        />

                    <EditText
                        android:id="@+id/etPin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="5dp"
                        android:background="@drawable/shape2"
                        android:textColorHint="@color/white"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        android:hint="PinCode"
                        android:inputType="number"
                        android:maxLength="6"
                        android:padding="10dp"
                        />


                    <Button
                        android:id="@+id/add_address"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_margin="@dimen/_10sdp"

                        android:background="@drawable/gradient_button"

                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"

                        android:text="Add Address"
                        android:textColor="@color/white"

                        />

                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView

                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                app:cardBackgroundColor="@color/homebg"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_25sdp"
                        android:gravity="center"
                        android:text="Bank Details"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:textStyle="bold"

                        />


                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="Account Number"
                        android:textColor="@color/white"


                        />


                    <EditText
                        android:id="@+id/etAccNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"

                        android:hint="Account No."
                        android:inputType="number"
                        android:padding="10dp"
                        android:background="@drawable/shape2"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="16dp"


                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="10dp"
                        android:text="Bank Name"
                        android:textColor="@color/white"


                        />

                    <EditText
                        android:id="@+id/etBankName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/etAccNo"
                        android:layout_margin="5dp"

                        android:hint="Bank Name"
                        android:inputType="textMultiLine"
                        android:padding="10dp"
                        android:background="@drawable/shape2"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="10dp"
                        android:text="IFSC Code"
                        android:textColor="@color/white"


                        />

                    <EditText
                        android:id="@+id/etIfsc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_margin="5dp"
                        android:background="@drawable/shape2"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="16dp"
                        android:hint="IFSC Code"
                        android:inputType="text"
                        android:padding="10dp"



                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="10dp"
                        android:text="Account Holders Name"
                        android:textColor="@color/white"


                        />

                    <EditText
                        android:id="@+id/etHName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_margin="5dp"
                        android:background="@drawable/shape2"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textSize="16dp"
                        android:hint="Account Holder Name"
                        android:inputType="text"
                        android:padding="10dp"



                        />


                    <Button
                        android:id="@+id/add_bank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:background="@drawable/gradient_button"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:text="Add Bank Details"
                        android:textColor="@color/white"


                        />

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_margin="@dimen/_10sdp"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/homebg"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_25sdp"
                        android:gravity="center"
                        android:text="Accounts "
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:textStyle="bold"

                        />


                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="Paytm Number"
                        android:textColor="@color/white"


                        />

                    <EditText
                        android:id="@+id/etPaytmNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape2"
                        android:textColorHint="@color/white"
                        android:textColor="@color/white"

                        android:hint="Enter Paytm number"
                        android:inputType="number"
                        android:padding="10dp"

                        android:textSize="16dp"

                        />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="PhonePay Number"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/white"


                        />
                    <EditText
                        android:id="@+id/etPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/logo"
                        android:textSize="16dp"
                        android:padding="10dp"
                        android:hint="Enter Phone pay number"

                        android:background="@drawable/shape2"
                        android:textColorHint="@color/white"
                        android:textColor="@color/white"
                        android:inputType="number"


                        />
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="Google Pay Number"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/white"


                        />
                    <EditText
                        android:id="@+id/etTezNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/logo"
                        android:background="@drawable/shape2"
                        android:textSize="16dp"
                        android:padding="10dp"
                        android:hint="Enter Google Pay(Tez) number"

                        android:textColorHint="@color/white"
                        android:textColor="@color/white"
                        android:inputType="number"

                        />

                    <Button
                        android:id="@+id/add_paytm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:background="@drawable/gradient_button"
                        android:text="Update"

                        android:textColor="@color/white"



                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                app:cardBackgroundColor="@color/homebg"
                app:cardCornerRadius="@dimen/_10sdp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:orientation="vertical"

                    android:padding="10dp">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_25sdp"
                        android:gravity="center"
                        android:text="Update Password"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:textStyle="bold"

                        />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="Old Password "
                        android:textColor="@color/white"


                        />

                    <EditText
                        android:id="@+id/et_old_pass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/shape2"
                        android:textColorHint="@color/white"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:hint="mobile number"
                        android:inputType="textPassword"
                        android:padding="10dp"

                        />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="10dp"
                        android:text="New Password "
                        android:textColor="@color/white"


                        />

                    <EditText
                        android:id="@+id/et_new_pass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_margin="5dp"
                        android:background="@drawable/shape2"
                        android:textColorHint="@color/white"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:hint="email "
                        android:textSize="16dp"
                        android:inputType="textPassword"
                        android:padding="5dp"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="10dp"
                        android:text="Confirm New Password"
                        android:textColor="@color/white"


                        />

                    <EditText
                        android:id="@+id/et_con_pass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_margin="5dp"
                        android:background="@drawable/shape2"
                        android:textColorHint="@color/white"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:hint="Date of Birth"
                        android:inputType="textPassword"
                        android:padding="5dp"
                        android:textSize="16dp"


                        />

                    <Button
                        android:id="@+id/btn_update_pass"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_10sdp"
                        android:background="@drawable/gradient_button"
                        android:text="Update"
                        android:textColor="@color/white" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</FrameLayout>
