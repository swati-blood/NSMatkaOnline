<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.WithdrawFundsFragment">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_120sdp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/app_logo"
>

        </ImageView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"

            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_below="@+id/toolbar"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativelayout"

                android:padding="20dp"
                android:gravity="center"

                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/textview1"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="sans-serif-black"
                    android:text="Withdraw"

                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textview3"
                    android:layout_below="@+id/withdrw_msg"
                    android:text="For Withdraw Related Querys"
                    android:textSize="20dp"
                    android:textStyle="italic"
                    android:visibility="gone"
                    android:textColor="@color/colorPrimary"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif-black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textview4"
                    android:visibility="gone"
                    android:layout_below="@+id/textview3"
                    android:text="Call Or Whats App"
                    android:textSize="20dp"
                    android:textStyle="italic"
                    android:textColor="@color/colorPrimary"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif-black"/>
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/imageview"
                    android:layout_below="@+id/textview4"
                    android:layout_marginTop="5dp"

                    android:backgroundTint="@color/greenColor"
                    android:visibility="gone"
                    android:layout_marginLeft="100dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textview5"
                    android:layout_below="@+id/textview4"
                    android:layout_toRightOf="@+id/imageview"
                    android:layout_marginLeft="3dp"
                    android:text="8889114346"
                    android:textSize="25dp"
                    android:textStyle="italic"
                    android:textColor="@color/colorAccent"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:visibility="gone"
                    android:fontFamily="sans-serif-black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textview6"
                    android:layout_below="@+id/textview5"
                    android:text="(Timing 10:00AM To 05:00PM)"
                    android:textSize="20dp"
                    android:visibility="gone"
                    android:textStyle="italic"
                    android:textColor="@color/colorAccent"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:fontFamily="sans-serif-black"/>

                <TextView
                    android:layout_marginTop="8dp"
                    android:id="@+id/withdrw_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textview1"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="sans-serif"
                    android:text="Withdrawal Requesting Time Is 10:00am To 3:00pm. The Amount Will Be Credited To Your Bank Account In Between 10:00am To 5:00pm Within 24hrs From Request. "
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16dp"
                    android:textStyle="italic" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:id="@+id/relWallet_1"
            android:layout_centerVertical="true"
            android:layout_below="@+id/relativelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/relWallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/dialog_buttons"
                android:backgroundTint="@color/white"

                android:layout_centerHorizontal="true"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/w_img"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:background="@drawable/ic_account_balance_wallet_black_24dp"
                    />
                <TextView
                    android:id="@+id/wallet_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:layout_toRightOf="@id/w_img"
                    android:layout_marginTop="2dp"
                    android:paddingRight="5dp"
                    android:text=""
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15dp"/>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/linerLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/relWallet">

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/icons8_money_bag_rupee_240px"
                    android:backgroundTint="@color/colorPrimary"/>

            </RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <EditText
        android:id="@+id/etRequstPoints"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape2"
        android:textSize="18dp"
        android:padding="10dp"
        android:hint="Enter Points"
        android:gravity="left"
        android:maxLength="10"
        android:textColor="@color/black"
        android:inputType="number"
        android:textAlignment="center"
        android:layout_marginRight="10dp"
        android:layout_below="@id/relWallet"
        android:layout_marginTop="10dp"
        tools:ignore="RtlCompat" />

    <LinearLayout
        android:id="@+id/lin_money"
        android:layout_below="@+id/etRequstPoints"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/bank_48px" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:padding="5dp"

                android:layout_margin="2dp"
                android:text="Select Withdraw Type"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/grey"
            android:layout_marginBottom="5sp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:background="@drawable/shape3"
                    android:id="@+id/rb_upi"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="UPI"
                    android:padding="2dp"
                    android:buttonTint="@color/colorPrimary"
                    android:textColor="@color/black"
                    />

                <RadioButton
                    android:background="@drawable/shape3"
                    android:id="@+id/rb_paytm"
android:visibility="gone"
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Paytm"
                    android:padding="2dp"
                    android:buttonTint="@color/colorPrimary"
                    android:textColor="@color/black"
                    />

                <RadioButton
                    android:layout_marginTop="2dp"
                    android:id="@+id/rb_google"
                    android:visibility="gone"
                    android:background="@drawable/shape3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Google Pay"
                    android:buttonTint="@color/colorPrimary"
                    android:textColor="@color/black"
                    />
                <RadioButton
                    android:id="@+id/rb_phone"
                    android:layout_marginTop="2dp"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone Pe"
                    android:background="@drawable/shape3"

                    android:buttonTint="@color/colorPrimary"
                    android:textColor="@color/black"
                    />
                <RadioButton
                    android:id="@+id/rb_bank"
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bank Account"
                    android:visibility="gone"
                    android:background="@drawable/shape3"
                    android:buttonTint="@color/colorPrimary"
                    android:textColor="@color/black"
                    />
            </RadioGroup>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/add_Request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Request"
        android:textAllCaps="false"
        android:background="@drawable/gradient_button"
        android:layout_below="@id/lin_money"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="30dp"


        />
</LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</ScrollView>

</FrameLayout>